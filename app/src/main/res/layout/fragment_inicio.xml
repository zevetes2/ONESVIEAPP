<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#ECECEC">

        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INICIO"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

        </FrameLayout>
        <LinearLayout
            android:layout_below="@+id/title"
            android:orientation="vertical"
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ones"
                android:layout_margin="15dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/first"
            android:orientation="vertical"
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:src="@drawable/omar1"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Omar Guevara - Director general de la ONESVIE"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El gobierno que encabeza el presidente Danilo Medina, viene desarrollando
responsablemente una transformación en el país, razón por la cual las estructuras
de nuestras edificaciones deben ser fuertes, tanto para que perduren en el tiempo
como para que garanticen la integridad física de nuestros ciudadanos y
garantizar la fortaleza de nuestra gente de nuestro pueblo
¡Muchas Gracias! "
                android:textColor="#fff"
                android:layout_margin="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/second"
            android:orientation="vertical"
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_3"
            android:layout_margin="10dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUESTROS ALIADOS"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/img1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mopc"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:id="@+id/img2"
                    android:layout_alignParentRight="true"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mepyd"
                    />
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/img3"
                    android:layout_below="@id/img1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cruzroja"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:id="@+id/img4"
                    android:layout_below="@id/img2"
                    android:layout_alignParentRight="true"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/defensacivil"
                    />

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</ScrollView>