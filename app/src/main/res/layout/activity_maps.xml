<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MapsActivity">
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALERTAS SÃSMICAS"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/backmap"
        android:layout_below="@+id/title"
        >
        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            >
        </fragment>
    </FrameLayout>
    <FrameLayout
        android:layout_below="@+id/backmap"
        android:orientation="vertical"
        android:id="@+id/Back_t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimaryDark"
        >
        <TextView
            android:id="@+id/Mag_y_Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.6 al oeste de Magadascar"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Back_t1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:gravity=""
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/nav_inicio"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/bg_4"
                >

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha y Hora"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/fechahora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10-01-2020 08:10:00"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/t1"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/nav_nosotros"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_4"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Magnitud"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/magnitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.8"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/t2"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/nav_servicios"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/bg_4"
                >

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profundidad"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/profundidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25km"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/t3"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/nav_contactos"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_4"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coordenadas"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_below="@+id/t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:textAlignment="center"
                            android:id="@+id/tLatitud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Latitud"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:layout_below="@+id/t4"
                            />
                        <TextView
                            android:textAlignment="center"
                            android:id="@+id/latitud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25km"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:layout_below="@+id/tLatitud"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tLongitud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Longitud"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:layout_below="@+id/latitud"
                            />
                        <TextView
                            android:id="@+id/longitud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25km"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:layout_below="@+id/tLongitud"
                            />
                    </LinearLayout>
                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>