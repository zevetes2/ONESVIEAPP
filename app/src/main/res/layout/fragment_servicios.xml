<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECECEC">

        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERVICIOS"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

        </FrameLayout>
        <LinearLayout
            android:layout_below="@+id/title"
            android:orientation="vertical"
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión y Asesoría para el conocimiento del Riesgo Sísmico"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del servicio:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fortalecimiento de las capacidades Técnicos Científicas a través de congresos, conferencias, seminarios, diplomados, talleres, cursos y charlas en temas de ingeniería Sismorresistente, Reducción de Riesgos de Desastres, uso de herramientas para la estimación del riesgo, manejo de desastres, entre otros."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A quién va dirigido:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impartidos a profesionales del área de la ingeniería, estudiantes, maestros constructores y público en general."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio ofrecido por: Ingeniería \nTeléfono: 809-567-6183\nCorreo: servicios@onesvie.gob.do\nDirección: Av. Ortega y Gasset Edif. Comisión Nacional de Emergencia, # 419, Plaza de la Salud, Ens. la Fe, Santo Domingo, R.D."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requerimientos o requisitos:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--- Profesionales del área de la Ingeniería.\n--- Maestros Constructores.\n--- Estudiantes de nivel inicial, básico, medio y superior.\n--- Público en general."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procedimientos a seguir:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Solicita de forma presencial o via electrónica."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles del servicio:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/servicio"
                    />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="1. Canal de Prestación:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/ts1"
                    android:layout_below="@+id/t1"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Presencial"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_below="@+id/ts1"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="10dp"
                    android:text="2. Horario de prestación:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/ts2"
                    android:layout_below="@+id/t2"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="De lunes a viernes, desde las 08:00 a.m. a 02:30 p.m"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_below="@+id/ts2"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="3. Costo del servicio:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/ts3"
                    android:layout_below="@+id/t3"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Gratis"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:id="@+id/t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_below="@+id/ts3"
                    android:layout_marginTop="41dp"
                    android:layout_marginLeft="10dp"
                    android:text="4. Tiempo de realización:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/ts4"
                    android:layout_below="@+id/t4"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Depende del alcance y complejidad del proyecto (3 semanas – 6 semanas)"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    />


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/first"
            android:orientation="vertical"
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Misión"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimizar el riesgo de las edificaciones e infraestructuras públicas y privadas del país, y proteger a los ciudadanos y el patrimonio físico que le sirve de sostén mediante procedimientos técnicos y educativos."
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/second"
            android:orientation="vertical"
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PALABRAS DEL DIRECTOR GENERAL"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Es importante saber siempre que la vida no es lo que se te da; es lo que creas, lo que conquistas y lo que te esfuerzas por alcanzar. Pero con Dios siempre!"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#fff"
                />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/omar2"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Omar Guevara"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:textAlignment="center"
                />
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administrador de Empresas / Político / Miembro del Comité Central del PLD"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffb536"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/f1"
            android:orientation="vertical"
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visión"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ser reconocida como una institución efectiva y transparente en la gestión del patrimonio y en la inversión para el desarrollo nacional."
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/third"
            android:orientation="vertical"
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historia"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durante el IX Seminario Latinoamericano y el Primer Congreso Dominicano de Ingeniería Sísmica, celebrado en Santo Domingo en el año 1996, se establecieron las bases para la creación de una oficina encargada de evaluar el desempeño sísmico de las edificaciones existentes. Dicha evaluación incluiría las edificaciones construidas antes de la implementación de las normativas sísmicas que regulan el diseño y construcción de estructuras, del año 1979.\n\nPosteriormente, en el mes de julio del año 2001, durante el desarrollo de la Conferencia Internacional para la Reducción del Riego Sísmico en el Caribe, celebrada en la ciudad de Santiago, se recomendaron los lineamientos básicos del sistema de prevención sísmica en la República Dominicana.\n\nTomando esto en consideración, el Poder Ejecutivo emitió el Decreto Núm. 715-01, el 5 de julio del año 200, creando la Oficina Nacional de Evaluación Sísmica y Vulnerabilidad de Infraestructura y Edificaciones (ONESVIE), con el objetivo de diagnosticar y evaluar la capacidad de resistencia sísmica de las edificaciones
del país, y establecer las correcciones en los casos que lo ameriten."
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>